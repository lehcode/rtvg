 */

$view = new Zend_View();
$view->headScript()->appendScript("$(document).ready(function() {
    $('div#edit-article-menu button').click(function(e){
	e.preventDefault;
	$('form#articleForm input[name=do]').val($(this).attr('id'));
	$('form#articleForm').submit();
})});
");
?>
