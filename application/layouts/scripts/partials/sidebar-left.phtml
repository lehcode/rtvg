    if (isset($this->bcTop) && !empty($this->bcTop)) {
        ?>
    <div id="topBroadcasts" class="module hidden-phone">
        <h4>Топ 20 недели</h4>
        <ul>
            <?php 
            foreach ($this->bcTop as $bc){
                try {
                    $hrefUrl = $this->url( array('channel'=>$this->escape($bc['channel_alias']), 'alias'=>$this->escape($bc['alias'])), 'default_listings_broadcast-week');
                } catch (Exception $e) {
                    throw new Zend_Exception("Cannot assemble URL", 500, $e);
                }
                    ?>
            <li>
                <img src="<?= $this->baseUrl( 'images/channel_logo/'.$this->escape($bc['channel_icon']) ) ?>" />
                <a href="<?= $hrefUrl ?>"
                    title="<?= $this->escape( sprintf("«%s» на канале «%s» на этой неделе", $bc['title'], $bc['channel_title'])) ?>">
                        <?= $this->escape($bc['title']) ?>
                </a>
            </li>
            <?php 	
            }
            ?>
        </ul>
    </div>	
        <?php 
    }
    ?>
    
    <?php
    if (isset($this->channelNews) && (bool)$this->channelNews!==false){ 
        ?>
    <div class="module channelNews">
            <h4>Новости канала</h4>
        <?php
        $i=0;
        foreach ($this->channelNews as $n){
            $vid = $this->videos[$i];
            $thumb = $vid['thumbs'][rand( 0, count( $vid['thumbs'])-1)];
            $href1 = $this->url(array('alias'=>$vid['alias'], 'id'=>$vid['rtvg_id']), 'default_videos_show-video');
            $href2 = $this->escape($n['link']);
            ?>
        <div class="message">
            
            <?php if (is_a($n['pubDate'], 'Zend_Date') && is_string($n['category'])) : ?>
                <p class="pubDate"><?= Xmltv_String::ucfirst($n['pubDate']->toString(Zend_Date::WEEKDAY)) .' :: '. $this->escape($n['category']) ?></p>
            <?php endif; ?>
            
            <p class="title"><?= $vid['desc'] ?></p>
            
            <p class="description">
                <a href="<?= $href1 ?>" title="<?= $this->escape($n['title']) ?>">
                    <img src="<?= $thumb['url'] ?>" class="channelNewsImage" />
                </a><?= $n['desc'] ?>
            </p>
            
            <p class="link"><a href="<?= $href2 ?>" target="blank"<?= ($i<3) ? '' : ' rel="nofollow"' ; ?>>вся новость</a> > </p>
        </div>
            <?php
            $i++;
        }
        ?>
    </div>
        <?php
    }
    ?>
    
