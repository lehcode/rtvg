<?php 
/**
 * Admin login screen view script
 */

if (!isset($this->user) || $this->user->role == 'guest') {
    $form = new Xmltv_Form_Login( array( 
    	'action'=>$this->baseUrl('admin/auth/login')
    ));
} else {
    $form = new Xmltv_Form_Logout(array( 
    	'action'=>$this->baseUrl('admin/auth/logout')
    ));
}

echo $form;
	
?>